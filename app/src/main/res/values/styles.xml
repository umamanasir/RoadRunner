<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
<!--    base style -->
    <style name="roadRunner" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="imgStyles">
        <item name="android:layout_centerInParent">true</item>
    <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="heading_loadingScreen" parent="android:Widget.TextView">
            <item name="android:textSize">22.15sp</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:fontFamily">@font/roboto_medium</item>
            <item name="android:textFontWeight" tools:targetApi="p">400</item>
            <item name="android:gravity">center</item>
            <item name="android:ellipsize">end</item>
            <item name="android:textStyle">bold</item>
    </style>

    <style name="textBox">
        <item name="android:background"> @color/textbox_bg</item>
        <item name="android:fontFamily"> @font/roboto_regular</item>
        <item name="android:textColor">@color/textHint</item>
        <item name="android:textSize">13.12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:minWidth">60sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="layout_goneMarginLeft">5dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="primaryBtn" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint"> @color/btnGreen</item>
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:padding"> 10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shape">oval</item>
    </style>

    <style name="login_footer">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
